<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta http-equiv="X-UA-Compatible" content="ie=edge" />
        <link
            rel="stylesheet"
            href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
        />
        <link rel="stylesheet" type="text/css" href="/stylesheets/main.css" />
        <title>YelpCamp</title>
    </head>

    <body>
        <nav class="navbar navbar-expand-md navbar-dark bg-dark mb-4">
            <a class="navbar-brand" href="/">YelpCamp</a>
            <button
                class="navbar-toggler"
                type="button"
                data-toggle="collapse"
                data-target="#navbarCollapse"
                aria-controls="navbarCollapse"
                aria-expanded="false"
                aria-label="Toggle navigation"
            >
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link active <%= typeof page !== 'undefined' && page === 'campgrounds' ? 'active' : ''%>" 
                            href="/campgrounds">Home</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <% if(!currentUser){ %>
                    <li class="nav-item">
                        <a class="nav-link <%= typeof page !== 'undefined' && page === 'campgrounds' ? 'active' : ''%>" href="/login">Log In</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= typeof page !== 'undefined' && page === 'campgrounds' ? 'active' : ''%>" href="/register">Sign Up</a>
                    </li>
                    <% } else {%>
                        <li class="nav-item">
                        <a class="nav-link <%= typeof page !== 'undefined' && page === 'campgrounds' ? 'active' : ''%>" href="#">
                            Signed In as <%= currentUser.username %>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= typeof page !== 'undefined' && page === 'campgrounds' ? 'active' : ''%>" href="/logout">Logout</a>
                    </li>
                    <% } %>
                </ul>
            </div>
        </nav>

        <div class="container">
            <% if(error && error.length > 0){ %>
            <div class="alert alert-danger" role="alert"><%= error %></div>
            <% } %> <% if(success && success.length > 0){ %>
            <div class="alert alert-success" role="alert"><%= success %></div>
            <% } %>
        </div>
    </body>
</html>
