<% include ./partials/header %>

<div class="row">
     <div class="col-md-12">
          <form class="form-signin" action="/register" method="POST">
               <h1 class="h3 mb-3 font-weight-normal">Please sign up</h1>
               <!-- <label for="inputUsername" class="sr-only">Username</label> -->
               <input
                    type="text"
                    id="inputUsername"
                    class="form-control mb-3"
                    name="username"
                    placeholder="Username"
                    required
                    autofocus
               />
               <!-- <label for="inputUsername" class="sr-only">User First Name</label> -->
               <input
                    type="text"
                    id="inputUsername"
                    class="form-control mb-3"
                    name="firstName"
                    placeholder="First Name"
                    required
               />
               <!-- <label for="inputUsername" class="sr-only">User Last Name</label> -->
               <input
                    type="text"
                    id="inputUsername"
                    class="form-control mb-3"
                    name="lastName"
                    placeholder="Last Name"
                    required
               />
               <!-- <label for="inputUsername" class="sr-only">Email</label> -->
               <input
                    type="email"
                    id="inputUsername"
                    class="form-control mb-3"
                    name="email"
                    placeholder="User Email"
                    required
               />
               <input
                    type="text"
                    id="inputUsername"
                    class="form-control mb-3"
                    name="avatar"
                    placeholder="User Avatar URL"
               />
               <!-- <label for="inputPassword" class="sr-only">Password</label> -->
               <input
                    type="password"
                    id="inputPassword"
                    class="form-control mb-3"
                    name="password"
                    placeholder="Password"
                    required
               />

               <button class="btn btn-lg btn-primary btn-block" type="submit">
                    Sign up
               </button>
          </form>
          <div class="form-signin"><a href="/campgrounds">Go Back</a></div>
     </div>
</div>

<% include ./partials/footer %>
