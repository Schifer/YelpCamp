<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <!-- sidebar -->
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="img-thumbnail">
                <img class="img-fluid" src="<%= campground.image %>" />
                <div class="caption">
                    <h4 class="pull-right">$9.00/night</h4>
                    <h1><a href=""> <%= campground.name %> </a></h1>
                    <p><%= campground.description %></p>
                    <p><em>Submitted By:</em> <%= campground.author.username %></p>
                    <a class="btn btn-warning" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
                    <!-- DELETE ROUTE -->
                    <form class="inlineForm" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <p>
                        <a href="/campgrounds/<%= campground._id %>/comments/new" class="btn btn-success">Add New Comment</a>
                    </p>
                </div>
                <% campground.comments.forEach(function(comment){ %>
                <div class="row">
                    <div class="col-md-12">
                        <p>
                            <strong><%= comment.author.username %></strong> 
                            <span class="pull-right">10 days ago</span>
                            <p><%= comment.text %></p>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<% }); %> <% include ../partials/footer %>
